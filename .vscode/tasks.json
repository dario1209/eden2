{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dev:all",
            "command": "npm",
            "args": [
                "run",
                "dev"
            ],
            "group": "build",
            "isBackground": true,
            "presentation": {
                "panel": "shared"
            }
        },
        {
            "label": "dev:frontend",
            "command": "npm",
            "args": [
                "run",
                "frontend"
            ],
            "group": "build",
            "options": {
                "cwd": "apps/frontend"
            }
        },
        {
            "label": "dev:backend",
            "type": "shell",
            "command": "uvicorn",
            "args": [
                "main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "group": "build",
            "options": {
                "cwd": "apps/backend"
            },
            "isBackground": true
        },
        {
            "label": "contracts:node",
            "command": "npm",
            "args": [
                "run",
                "contracts:dev"
            ],
            "group": "test",
            "options": {
                "cwd": "packages/contracts"
            }
        },
        {
            "label": "deploy:contracts",
            "command": "npm",
            "args": [
                "run",
                "deploy:testnet"
            ],
            "group": "build",
            "options": {
                "cwd": "packages/contracts"
            }
        }
    ]
}