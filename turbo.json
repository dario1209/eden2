{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env.*local"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                ".next/**",
                "dist/**",
                "build/**"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {},
        "type-check": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "**/*.tsbuildinfo"
            ]
        },
        "sync-abis": {
            "cache": false
        }
    }
}